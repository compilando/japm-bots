{
    "dashboard": {
        "id": null,
        "title": "Bot System Dashboard",
        "tags": [
            "bot-system",
            "monitoring"
        ],
        "style": "dark",
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Bot Executions Total",
                "type": "stat",
                "targets": [
                    {
                        "expr": "sum(bot_executions_total)",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "Bot Execution Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(bot_executions_total[5m])",
                        "refId": "A",
                        "legendFormat": "{{bot_type}} - {{status}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 6,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Bot Execution Duration",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(bot_execution_duration_seconds_bucket[5m]))",
                        "refId": "A",
                        "legendFormat": "95th percentile"
                    },
                    {
                        "expr": "histogram_quantile(0.50, rate(bot_execution_duration_seconds_bucket[5m]))",
                        "refId": "B",
                        "legendFormat": "50th percentile"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 18,
                    "y": 0
                }
            },
            {
                "id": 4,
                "title": "Webhook Deliveries",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(webhook_deliveries_total[5m])",
                        "refId": "A",
                        "legendFormat": "{{status}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Queue Size",
                "type": "graph",
                "targets": [
                    {
                        "expr": "queue_size",
                        "refId": "A",
                        "legendFormat": "{{queue_name}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 6,
                "title": "Semaphore Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "semaphore_usage",
                        "refId": "A",
                        "legendFormat": "{{semaphore_name}} used"
                    },
                    {
                        "expr": "semaphore_waiting",
                        "refId": "B",
                        "legendFormat": "{{semaphore_name}} waiting"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 16
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "refresh": "5s"
    }
}